{
    "name": "gitvault",
    "build": {
        "args": {
            "DOCKER_GID": "131"
        },
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--name",
        "gitvault-devcontainer"
    ],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "gopls": {
                    "ui.semanticTokens": true,
                    "build.buildFlags": [
                        "-tags=integration"
                    ]
                }
            },
            "extensions": [
                "golang.go"
            ]
        }
    },
    "initializeCommand": "export DOCKER_GID=",
    "postStartCommand": "go mod tidy"
}